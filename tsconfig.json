{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
, "src/components/ThemeToggle.jsx", "src/components/ProductCard.jsx","src/components/ThemeProvider.jsx", "src/components/Footer.jsx", "src/components/Header.jsx","src/app/product/[id]/page.jsx", "src/components/themeStore.js", "src/store/themeStore.js", "src/store/cartStore.js"  ],
  "exclude": [
    "node_modules"
  ]
}
